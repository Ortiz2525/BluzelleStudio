{
  "name": "bluzelle-crud",
  "version": "1.0.2",
  "description": "Bluzelle Database CRUD Application",
  "main": "main.js",
  "dependencies": {
    "command-line-args": "^5.0.2",
    "electron": "^2.0.2",
    "electron-installer-debian": "^0.8.1",
    "electron-packager": "^12.1.0",
    "electron-react-devtools": "^0.5.3"
  },
  "scripts": {
    "emulator": "./emulator/Emulator.js",
    "start": "electron ./main.js",
    "start-debug": "electron ./main.js --debug",
    "package-mac": "electron-packager . --out=dist --platform=darwin --arch=x64 --icon=logo.icns --overwrite --package-manager=yarn --asar",
    "package-linux": "electron-packager . --out=dist --platform=linux --arch=x64 --overwrite --package-manager=yarn",
    "package-windows": "electron-packager . --out=dist --platform=win32 --arch=x64 --overwrite --package-manager=yarn",
    "package-deb": "electron-installer-debian --src dist/bluzelle-crud-linux-x64/ --dest dist --arch amd64 --options.icon logo.png"
  },
  "license": "UNLICENSED",
  "private": true
}
